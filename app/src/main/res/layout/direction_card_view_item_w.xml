<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/card_margin_from_edge_screen"
    android:layout_marginRight="@dimen/card_margin_from_edge_screen"
    android:layout_marginTop="@dimen/card_margin_from_top_screen"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="?android:colorBackground"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="8dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/direction_iv"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/card_margin_from_edge_screen"
            android:paddingBottom="8dp"
            android:layout_margin="10dp"
            android:paddingTop="8dp"
            android:textSize="@dimen/card_header_text_size"
            tools:text="TEST TEXT "
            android:layout_toRightOf="@+id/direction_iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_distance"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/tv_title"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_time"
            android:layout_below="@+id/tv_title"
            android:layout_alignRight="@+id/tv_title"
            android:layout_marginBottom="4dp"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>